generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider = "prisma-nestjs-graphql"
  output   = "../src/prisma-generate"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================= ENUMS =========================
enum DeviceType {
  MOBILE
  DESKTOP
  TABLET
  TV
  OTHER

  @@map("device_type")
}

enum ContactType {
  EMAIL
  PHONE
  LINKEDIN
  GITHUB
  TWITTER
  INSTAGRAM
  RESUME
  WEBSITE
  DISCORD
  FACEBOOK
  TIKTOK
  YOUTUBE

  @@map("contact_type")
}

enum LanguageCode {
  ES
  EN
  FR
  PT

  @@map("language_code")
}

enum HeroGreetingStatus {
  DRAFT
  PREVIEW
  PUBLISHED
  ARCHIVED

  @@map("hero_greeting_status")
}

enum TemplateType {
  BASIC
  PROFESSIONAL
  CREATIVE
  MODERN
  MINIMALIST

  @@map("template_type")
}

enum Status {
  DRAFT
  ACTIVE
  INACTIVE
  ARCHIVED
  PREVIEW
  PUBLISHED

  @@map("status")
}

enum Section {
  HERO_GREETING
  ABOUT
  CONTACTS
  PORTFOLIO
  TESTIMONIALS
  BLOG
  SERVICES
  PRICING
  FAQ
  FOOTER
  PAYMENTS

  @@map("sections")
}

// ========================= MODELS =========================

model Template {
  templateId   Int          @id @default(autoincrement()) @map("template_id")
  userId       Int          @map("user_id")
  uuid         String       @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String       @db.VarChar(100)
  type         TemplateType @map("type")
  previewImage String?      @map("preview_image") @db.VarChar(255)
  description  String?      @db.VarChar(500)
  status       Status       @map("status")
  themeColor   String?      @map("theme_color") @db.VarChar(30)
  deletedAt    DateTime?    @map("deleted_at") @db.Timestamptz(6)
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)

  user             User              @relation(fields: [userId], references: [userId], map: "fk_templates_user")
  templateSections TemplateSection[]

  @@index([type], map: "idx_templates_type")
  @@index([deletedAt], map: "idx_templates_deleted_at")
  @@map("templates")
}

model TemplateSection {
  templateSectionId Int      @id @default(autoincrement()) @map("template_section_id")
  templateId        Int      @map("template_id")
  uuid              String   @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  section           Section  @map("section")
  frontendConfig    Json?    @map("frontend_config") @db.JsonB
  sortOrder         Int      @default(0) @map("sort_order")
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  status            Status?  @map("status")

  template Template @relation(fields: [templateId], references: [templateId], map: "fk_template_sections_template")

  @@index([templateId], map: "idx_template_sections_template_id")
  @@map("template_sections")
}

model Contact {
  contactId   Int         @id @default(autoincrement()) @map("contact_id")
  userId      Int         @map("user_id")
  uuid        String      @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  link        String      @db.VarChar(500)
  type        ContactType @map("type")
  title       String      @db.VarChar(100)
  iconName    String?     @map("icon_name") @db.VarChar(255)
  displayText String?     @map("display_text") @db.VarChar(255)
  className   String?     @map("class_name") @db.VarChar(255)
  sortOrder   Int         @default(0) @map("sort_order")
  deletedAt   DateTime?   @map("deleted_at") @db.Timestamptz(6)
  createdAt   DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [userId], map: "fk_contacts_user")

  @@index([deletedAt], map: "idx_contacts_deleted_at")
  @@index([sortOrder], map: "idx_contacts_sort_order")
  @@index([userId], map: "idx_contacts_user_id")
  @@index([uuid], map: "idx_contacts_uuid")
  @@map("contacts")
}

enum PaymentSourceType {
  BANK
  CRYPTO
  PSP // payment service provider (MercadoPago, etc.)
  WALLET
  QR
  BINANCE
  AIRTM
  OTHER

  @@map("payment_source_type")
}

model PaymentSource {
  paymentSourceId Int               @id @default(autoincrement()) @map("payment_source_id")
  uuid            String            @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String            @db.VarChar(100)
  type            PaymentSourceType @default(OTHER)
  code            String?           @db.VarChar(50)
  logoPath        String?           @map("logo_path") @db.VarChar(255)
  website         String?           @db.VarChar(255)
  countryCode     String?           @map("country_code") @db.VarChar(100)
  metadata        Json?             @map("metadata")
  deletedAt       DateTime?         @map("deleted_at") @db.Timestamptz(6)
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime?         @map("updated_at") @db.Timestamptz(6)
  Payment         Payment[]

  @@index([type], map: "idx_payment_sources_type")
  @@index([deletedAt], map: "idx_payment_sources_deleted_at")
  @@map("payment_sources")
}

model Payment {
  paymentId       Int       @id @default(autoincrement()) @map("payment_id")
  userId          Int       @map("user_id")
  paymentSourceId Int       @map("payment_source_id")
  uuid            String    @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  link            String?   @db.VarChar(500)
  title           String    @db.VarChar(100)
  displayText     String?   @map("display_text") @db.VarChar(255)
  hasQrCode       Boolean   @default(false) @map("has_qr_code")
  className       String?   @map("class_name") @db.VarChar(255)
  frontendDetails Json?     @map("frontend_details") @db.JsonB
  isFavorite      Boolean   @default(false) @map("is_favorite")
  sortOrder       Int       @default(0) @map("sort_order")
  deletedAt       DateTime? @map("deleted_at") @db.Timestamptz(6)
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  user          User          @relation(fields: [userId], references: [userId], map: "fk_payments_user")
  paymentSource PaymentSource @relation(fields: [paymentSourceId], references: [paymentSourceId], map: "fk_payments_payment_source")

  @@index([deletedAt], map: "idx_payments_deleted_at")
  @@index([sortOrder], map: "idx_payments_sort_order")
  @@index([userId], map: "idx_payments_user_id")
  @@index([uuid], map: "idx_payments_uuid")
  @@map("payments")
}

model HeroGreeting {
  heroGreetingId Int          @id @default(autoincrement()) @map("hero_greeting_id")
  uuid           String       @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId         Int          @map("user_id")
  title          String
  content        String
  footer         String
  language       LanguageCode @map("language")
  device         DeviceType   @map("device")
  deletedAt      DateTime?    @map("deleted_at") @db.Timestamp(6)
  createdAt      DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [userId], map: "fk_hero_greeting_user")

  @@map("hero_greetings")
}

model NavLink {
  navLinkId Int          @id @default(autoincrement()) @map("nav_link_id")
  userId    Int          @map("user_id")
  uuid      String       @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  content   String       @db.VarChar(255)
  language  LanguageCode @map("language")
  className String?      @map("class_name") @db.VarChar(255)
  url       String       @default("#") @db.VarChar(70)
  sortOrder Int          @default(0) @map("sort_order")
  deletedAt DateTime?    @map("deleted_at") @db.Timestamptz(6)
  createdAt DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime     @default(now()) @map("updated_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [userId], map: "fk_nav_links_user")

  @@map("nav_links")
}

model User {
  userId    Int     @id @default(autoincrement()) @map("user_id")
  uuid      String  @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String  @unique @db.VarChar(100)
  username  String? @unique @db.VarChar(100)
  firstName String? @map("first_name") @db.VarChar(60)
  lastName  String? @map("last_name") @db.VarChar(60)
  picture   String?
  provider  String  @default("google")

  passwordHash String?   @map("password_hash")
  deletedAt    DateTime? @map("deleted_at") @db.Timestamp(6)
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime  @default(now()) @map("updated_at") @db.Timestamptz(6)

  contacts      Contact[]
  heroGreetings HeroGreeting[]
  navLinks      NavLink[]
  payments      Payment[]      @relation(map: "fk_payments_user")
  templates     Template[]

  @@map("users")
}
