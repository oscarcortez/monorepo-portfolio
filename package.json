{
  "name": "monorepo-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio monorepo with frontend and backend applications",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "type-check": "pnpm -r --parallel type-check",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "format": "pnpm -r format",
    
    "viz-frontend:dev": "pnpm --filter viz-frontend dev",
    "viz-frontend:build": "pnpm --filter viz-frontend build",
    
    "viz-backend:dev": "pnpm --filter viz-backend dev",
    "viz-backend:build": "pnpm --filter viz-backend build",
    
    "admin-frontend:dev": "pnpm --filter admin-frontend dev",
    "admin-frontend:build": "pnpm --filter admin-frontend build",
    
    "auth-frontend:dev": "pnpm --filter auth-frontend dev",
    "auth-frontend:build": "pnpm --filter auth-frontend build",
    
    "docker:dev": "docker-compose up -d",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up --build -d",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:backend": "docker-compose logs -f viz-backend",
    "docker:logs:frontend": "docker-compose logs -f viz-frontend",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -af"
  },
  "keywords": ["monorepo", "portfolio", "pnpm", "workspace"],
  "author": "Oscar Cortez",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}